<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themeBackgroundGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <gttrade.guantang.com.tradeerp.TE02.HistogramView
            android:id="@+id/histogramView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#33aca9a9" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/storeTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saf"
            android:textColor="@color/ziti333333"
            android:textSize="@dimen/ziti14sp" />

        <TextView
            android:id="@+id/moneyTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sassf"
            android:textColor="#ffb005"
            android:textSize="@dimen/ziti14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/percentTxtView"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:padding="3dp"
        android:text="100%"
        android:textColor="#ffb005"
        android:textSize="@dimen/ziti16sp" />

</FrameLayout>